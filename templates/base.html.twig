<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Symfony {% endblock %}</title>
        <link rel="icon" href="https://img.icons8.com/nolan/64/permanent-job.png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('assets/css/_bootswatch.scss') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/_variables.scss') }}">
            <link rel="stylesheet" href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
             <link rel="stylesheet" href={{asset('assets/css/index.css')}}>
            <style>
                .main {
                        font-family: 'Roboto', sans-serif;
                        min-height: calc(110vh - 217px - 58px)
                    }
                table {
                    border-collapse: collapse;
                    border-radius: 1em;
                    overflow: hidden;
                }
                thead {
                    background-color: #212529;
                    color: #D3D3D4;
                    border-collapse: collapse;
                    border-radius: 1em;
                    overflow: hidden;
                }
                footer {
                    
                    margin-top:auto;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('assets/js/popper.min.js') }}"></script>
            <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js') }}"></script>
            <script src="{{ asset('https://unpkg.com/@lottiefiles/lottie-player@1.5.7/dist/lottie-player.js') }}"></script>
            <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <body class="main layout">
      
        {% block body %}
            {#  #}
        {% endblock %}

        <footer>
            <div class="w-100 footer-content">
                <div class="text-center">
                    <div class="d-flex-inline mb-2">
                        <a href = "https://facebook.com">
                            <img src={{ asset("assets/media/misc/facebook.png")}} class='media-logo'>
                        </a>
                        <a href = "https://instagram.com">
                           <img src={{ asset("assets/media/misc/instagram.png")}} class='media-logo'>
                        </a>
                        <a href = "https://twitter.com">
                            <img src={{ asset("assets/media/misc/twitter.png")}} class='media-logo'>
                        </a>
                    </div>
                    <p>&copy All rights reserved - <span id="footer-current-year"></span><p>
                </div>
            <div>
        </footer>
    </body>
    <script>
        document.getElementById('footer-current-year').innerHTML = new Date().getFullYear();
    </script>
</html>
